{
	"id": "com.google.chromecast",
	"version": "0.10.0",
	"compatibility": "0.x || 1.x",
	"category": "video",
	"name": {
		"en": "Google Chromecast"
	},
	"description": {
		"en": "Connect Homey with your Google Chromecast to send video to your TV"
	},
	"author": {
		"name": "Emile Nijssen",
		"website": "http://www.emilenijssen.nl"
	},
	"contributors": {
		"developers": [
			{
				"name": "Matjaž Lipuš",
				"website": "http://matjaz.info"
			}
		]
	},
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"dependencies": {
		"ytdl-core": "*",
		"chromecast-api": "*"
	},
	"drivers": [
		{
			"id": "chromecast",
			"name": {
				"en": "Chromecast"
			},
			"images": {
				"large": "./drivers/chromecast/assets/images/large.jpg",
				"small": "./drivers/chromecast/assets/images/small.jpg"
			},
			"class": "videoplayer",
			"capabilities": [ "play", "pause", "stop" ],
			"pair": [
				{
					"id": "list_chromecasts",
					"template": "list_devices",
					"navigation": {
						"next": "add_chromecasts"
					}
				},
				{
					"id": "add_chromecasts",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "castVideo",
				"title": {
					"en": "Cast a video",
					"nl": "Cast een video"
				},
				"fluidArgs": true,
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"placeholder": {
							"en": "Find a chromecast..."
						},
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "url",
						"type": "text",
						"placeholder": {
							"en": "URL"
						}
					}
				]
			}
		]
	}
}
