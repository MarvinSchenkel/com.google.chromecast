{
	"id": "com.google.chromecast",
	"version": "2.0.0",
	"compatibility": ">=1.0.0",
	"category": "video",
	"name": {
		"en": "Google Chromecast"
	},
	"description": {
		"en": "Google Chromecast for Homey"
	},
	"author": {
		"name": "Athom B.V.",
		"website": "https://www.athom.com"
	},
	"contributors": {
		"developers": [
			{
				"name": "Matjaž Lipuš",
				"website": "http://matjaz.info",
				"email": "matjazl@gmail.com"
			}
		]
	},
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"drivers": [
		{
			"id": "chromecast",
			"name": {
				"en": "Chromecast"
			},
			"images": {
				"large": "./drivers/chromecast/assets/images/large.jpg",
				"small": "./drivers/chromecast/assets/images/small.jpg"
			},
			"class": "speaker",
			"capabilities": [ ],
			"pair": [
				{
					"id": "list_chromecasts",
					"template": "list_devices",
					"navigation": {
						"next": "add_chromecasts"
					}
				},
				{
					"id": "add_chromecasts",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "chromecast_audio",
			"name": {
				"en": "Chromecast Audio"
			},
			"images": {
				"large": "./drivers/chromecast/assets/images/large.jpg",
				"small": "./drivers/chromecast/assets/images/small.jpg"
			},
			"class": "speaker",
			"capabilities": [ ],
			"pair": [
				{
					"id": "list_chromecasts",
					"template": "list_devices",
					"navigation": {
						"next": "add_chromecasts"
					}
				},
				{
					"id": "add_chromecasts",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "castYouTube",
				"title": {
					"en": "Cast a YouTube video",
					"nl": "Cast een YouTube video"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_id=chromecast"
					},
					{
						"name": "youtube_id",
						"type": "autocomplete",
						"placeholder": {
							"en": "Find a YouTube video..."
						}
					}
				]
			},
			{
				"id": "castUrl",
				"title": {
					"en": "Cast a website",
					"nl": "Cast een webpagina"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_id=chromecast"
					},
					{
						"name": "url",
						"type": "text",
						"placeholder": {
							"en": "https://www.athom.com"
						}
					}
				]
			},
			{
				"id": "castVideo",
				"title": {
					"en": "Cast a video URL",
					"nl": "Cast een video URL"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_id=chromecast"
					},
					{
						"name": "url",
						"type": "text",
						"placeholder": {
							"en": "https://website.com/video.mp4"
						}
					}
				]
			},
			{
				"id": "castAudio",
				"title": {
					"en": "Cast a audio URL",
					"nl": "Cast een audio URL"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"filter": "driver_id=chromecast_audio"
					},
					{
						"name": "url",
						"type": "text",
						"placeholder": {
							"en": "https://website.com/audio.mp3"
						}
					}
				]
			}
		]
	}
}
