{
	"id": "com.google.chromecast",
	"version": "1.0",
	"name": {
		"en": "Google Chromecast"
	},
	"description": {
		"en": "Connect Homey with your Google Chromecast to send video to your TV"
	},
	"author": {
		"name": "Emile Nijssen",
		"website": "http://www.emilenijssen.nl"
	},
	"dependencies": {
		"castv2-client": "*",
		"castv2-youtube": "*",
		"chromecast-scanner": "*"
	},
	"drivers": [
		{
			"id": "chromecast",
			"name": {
				"en": "Chromecast"
			},
			"class": "videoplayer",
			"capabilities": [ "play", "pause", "stop" ],
			"pair": [
				{
					"id": "list_chromecasts",
					"template": "list_devices",
					"navigation": {
						"next": "add_chromecasts"
					}
				},
				{
					"id": "add_chromecasts",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"actions": [
			{
				"method": "castYoutube",
				"title": {
					"en": "Cast a YouTube video",
					"nl": "Cast een YouTube video"
				},
				"args": [
					{
						"name": "chromecast",
						"type": "device",
						"placeholder": {
							"en": "Find a chromecast..."
						},
						"filter": "driver_uri=homey:app:com.google.chromecast&driver_id=chromecast"
					},
					{
						"name": "youtube_id",
						"type": "autocomplete",
						"placeholder": {
							"en": "Find a video..."
						}
					}
				]	
			}
		]
	}
}